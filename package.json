{
  "name": "agrodiario",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/translate-google",
      "**/translate-google/**"
    ]
  },
  "scripts": {
    "client": "yarn workspace @agrodiario/client",
    "backend": "yarn workspace @agrodiario/backend",
    "dev:client": "yarn workspace @agrodiario/client dev",
    "dev:backend": "yarn workspace @agrodiario/backend start:dev",
    "build:client": "yarn workspace @agrodiario/client build",
    "build:backend": "yarn workspace @agrodiario/backend build",
    "build": "yarn build:client && yarn build:backend",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report e2e/reports"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": "^1.22.0"
  },
  "dependencies": {
    "@types/leaflet": "^1.9.21",
    "leaflet": "^1.9.4",
    "react-leaflet": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "dotenv": "^17.2.3"
  }
}
